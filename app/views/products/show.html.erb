<% title @product.title %>

<div class="product">
	<div class="image"><%= image_tag @product.image %></div>
	<div class="details">
		<header>
			<h1><%= @product.title %></h1>
			<h2><%= @product.category.name %> - <%= @product.expansion.name %></h2>
		</header>		
		<%= simple_format @product.description %>
		<div class="buying">
			<p class="price">
			  Price: <span><%= number_to_currency @product.price %></span>
			</p>
			<div>
				<p>
					<% if user_signed_in? %>
						<%= button_to 'Add to Basket', line_items_path(product_id: @product), :class => 'button', remote: true %>
					<% else %>
					  <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %> to buy this product.
					<% end %>
				</p>
			</div>
		</div>
	</div>
</div>
