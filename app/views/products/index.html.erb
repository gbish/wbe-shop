<% title("Viewing Products") %>

<% if admin_signed_in? %>
	<p><%= link_to 'Add New Product', new_product_path, :class => 'button' %></p>
<% end %>

<div class="listing">
	<table>
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th>Category</th>
			<th>Expansion</th>
			<th>Price</th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
		<% @products.each do |product| %>
			<tr>
				<td class="image"><%= link_to(image_tag(product.image, size: '45x60', alt: product.title, title: product.title), product) %></td>
				<td><%= link_to product.title, product, title: product.title %></td>
				<td><%= product.category.name %></td>
				<td><%= product.expansion.name %></td>
				<td><%= number_to_currency product.price %></td>
				<td><%= link_to 'Edit', edit_product_path(product) %></td>
				<td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</table>
</div>
<div class="pagi">
	<%= paginate @products %>
</div>
